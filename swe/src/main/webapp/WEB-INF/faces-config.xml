<?xml version="1.0" encoding="UTF-8"?>
<!-- This file is not required if you don't need any extra configuration. -->
<faces-config version="2.0" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
        http://java.sun.com/xml/ns/javaee
        http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd">

	<!-- This descriptor activates the JSF 2.0 Servlet -->

	<!-- Write your navigation rules here. You are encouraged to use CDI for 
		creating @Named managed beans. -->

	<application>
		<locale-config>
			<default-locale>en</default-locale>
			<supported-locale>de</supported-locale>
		</locale-config>

		<resource-bundle>
			<base-name>de.swe.messages</base-name>
			<var>msg</var>
		</resource-bundle>

		<resource-bundle>
			<base-name>de.swe.auth.ui.messages</base-name>
			<var>msgAuth</var>
		</resource-bundle>
		
		<resource-bundle>
			<base-name>de.swe.kundenverwaltung.ui.messages</base-name>
			<var>msgKv</var>
		</resource-bundle>
		
		<resource-bundle>
			<base-name>de.swe.bestellverwaltung.ui.messages</base-name>
			<var>msgBv</var>
		</resource-bundle>
		
		<resource-bundle>
			<base-name>de.swe.artikelverwaltung.ui.messages</base-name>
			<var>msgAv</var>
		</resource-bundle>
	</application>
</faces-config>
